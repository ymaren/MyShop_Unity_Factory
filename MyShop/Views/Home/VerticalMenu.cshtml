@model IEnumerable<Store.Logic.ProductStore.Models.ViewModels.ProductCategoryViewModel>
@using Store.Logic.ProductStore.Models.ViewModels
@Styles.Render("~/Content/css")

<input type="checkbox" id="nav-toggle" hidden>

<nav class="nav">
    <label for="nav-toggle" class="nav-toggle" onclick></label>

    <h2 class="logo">
        <a href="/Home/menu//">my admin cabinet</a>
    </h2>

    <ul>
        <li>
            @foreach (ProductCategoryViewModel categ in Model)
            {
                @Html.RouteLink(categ.CategoryName, new
                {
                 controller = "Home",
                 action = "Index",
                 category = categ.Id,
                 page = 1
                }

             )
                <ul type="none">
                    <li>
                        @foreach (ProductGroupViewModel group in categ.ProductGroups)
                        {
                            @Html.RouteLink(group.GroupName, new
                         {
                           controller = "Home",
                           action = "Index",
                           category = categ.Id,
                           group = group.Id,
                           page = 1
                          }
                         , new
                         {
                           @class = "btn btn-block text-left"
                         }
                       )


                        }
                    </li>
                </ul>
            }
        </li>
    </ul>
</nav>
