@model Store.Logic.ProductStore.Models.ViewModels.OrderTypeViewModel
@{
    ViewBag.Title = Model != null ? "Edit order type" : "Add new order type";
    Layout = null;
    @Styles.Render("~/Content/css")
}


@using (Html.BeginForm())
{
    <div class="row">

        <div class="col-1"></div>
        <fieldset class="col-md-8 col-md-offset-1 alert-info border-dark">
            <legend> <strong>@ViewBag.Title</strong> </legend>
            <div>

                <div>
                    <strong>@Html.LabelFor(model => model.OrderTypeName, htmlAttributes: new { @class = "form-control-static col-md-2 text-center" })</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.OrderTypeName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OrderTypeName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-1 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
}
