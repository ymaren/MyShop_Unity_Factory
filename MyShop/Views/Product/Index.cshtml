@model IEnumerable<Store.Logic.ProductStore.Models.ViewModels.ProductViewModel>

@{
    ViewBag.Title = "Product list";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
    @Styles.Render("~/Content/css")
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Product list</h3>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Add new product", "Create", null,
            new { @class = "btn btn-success" })
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered table-hover">
            <tr>
                <th class="text-right">ID</th>
                <th>Group</th>
                <th>Name</th>
                <th class="text-right">Price</th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <td> @item.ProductGroup.GroupName</td>

                    <td>@Html.ActionLink(item.Name, "Edit", new { item.Id })</td>
                    <td class="text-right">@item.Price.ToString("# UAH")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Product"))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit"
                                   class="btn btn-danger"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>


</div>
