@model MyShop.Models.MyShopModels.User

@{
    ViewBag.Title = "Edit product category";
    Layout = null;
    @Styles.Render("~/Content/css")
}


@using (Html.BeginForm())
{
    <div class="row">

        <div class="col-1"></div>
        <fieldset class="col-md-8 col-md-offset-1 alert-info border-dark">
            <legend> <strong>Edit user</strong> </legend>
            <div>
                @Html.HiddenFor(m=>m.Id)
                <div>
                    <strong>@Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label col-md-1" })</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <strong>@Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-1" })</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <strong>@Html.LabelFor(model => model.UserPassword, htmlAttributes: new { @class = "control-label col-md-1" })</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
               
                <div class="form-group">
                    <strong>@Html.LabelFor(model => model.UserCountry, htmlAttributes: new { @class = "control-label col-md-1" })</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserCountry, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserCountry, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <strong>@Html.LabelFor(model => model.UserAddress, htmlAttributes: new { @class = "control-label col-md-3" })</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserAddress, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a class="btn btn-primary" href="/Account/Login">Cancel</a>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
}
